use libc::{ puts, malloc, free, itoa };

func main() -> i64 {
    var buff = [i8; 128];
    for (var i = 0; i < 100; i += 1) {
        itoa(i, buff, 10);
        if (i == 5) {
            puts("[for_test.colgm] should continue when i == 5");
            continue;
        } else if (i == 11) {
            puts("[for_test.colgm] should break when i == 11");
            break;
        }
        puts(buff);
    }

    for (var i = 0; ; i += 1) {
        if (i == 65536) {
            puts("[for_test.colgm] should break when i == 65536");
            break;
        }
    }

    var i = 0;
    for(;;) {
        if (i == 65536) {
            puts("[for_test.colgm] should break when i == 65536");
            break;
        }
        i += 1;
    }
    return 0;
}