use std::io::{ io };
use std::utf8::{ utf8str };

func main() -> i64 {
    var const_str = "hello world | 你好，世界 | こんにちは、世界";
    var u = utf8str::from(const_str);
    defer u.delete();

    foreach (var c; u.data) {
        io::stdout().out_u64(c.index()).out(" : ").out(c.get().bytes).endln();
    }

    return 0;
}